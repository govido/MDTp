						</Border>

						<Border Background="#FFDAFFE0" BorderThickness="1" Grid.Row="2" Grid.ColumnSpan="3">
							<TextBlock TextWrapping="Wrap" VerticalAlignment="Bottom" Text="Status WoL" Margin="5,0,0,0" Name="Status_WoL" FontWeight="Bold" Width="auto" ToolTip="WoL state"/>
						</Border>

						<Border BorderBrush="#1A00FF0B" Background="#FFDAFFE0" BorderThickness="1" Grid.Row="1" Grid.ColumnSpan="3">
							<Grid Name="Datagrid">
								<StackPanel Name="datagrid_buttons" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
									<Button IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,0,0,0" Name="filter_datagrid_button" Width="auto" ToolTip="Filter database an edit (PXE on/off, TS change, driver change, delete PCs, WoL...)">
										<StackPanel Orientation="Horizontal">
											<iconPacks:PackIconMaterial Kind="filter"/>
											<TextBlock Margin="5,0">Filter and edit</TextBlock>
										</StackPanel>
									</Button>
									<Button IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,0,0,0" Name="wol_button" Width="auto" ToolTip="Start selected PCs with WoL">
										<StackPanel Orientation="Horizontal">
											<iconPacks:PackIconMaterial Kind="power"/>
											<TextBlock Margin="5,0">WoL Start</TextBlock>
										</StackPanel>
									</Button>
									<Button IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,0,0,0" Name="ping_button" Width="auto" ToolTip="PING selected PCs">
										<StackPanel Orientation="Horizontal">
											<iconPacks:PackIconMaterial Kind="swaphorizontal"/>
											<TextBlock Margin="5,0">Pingcheck</TextBlock>
										</StackPanel>
									</Button>
									<Button IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,0,0,0" Name="RDP_main_button" ToolTip="Start RDP-Session for selected PCs">
										<StackPanel Orientation="Horizontal">
											<iconPacks:PackIconMaterial Kind="monitor"/>
											<TextBlock Margin="5,0">RDP start</TextBlock>
										</StackPanel>
									</Button>
									<Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,0,0,0" Name="refresh_datagrid_button" Width="auto" ToolTip="Refresh Database (SQL query takes some time)">
										<StackPanel Orientation="Horizontal">
											<iconPacks:PackIconMaterial Kind="refresh"/>
											<TextBlock Margin="5,0">Refresh Database</TextBlock>
										</StackPanel>
									</Button>
								</StackPanel>
								<DataGrid HorizontalAlignment="Center" Height="auto" Width="auto" VerticalAlignment="Top" Margin="5,40,5,5" Name="DB_datagrid" ToolTip="Select one or mutiple rows and right click to edit">
									<DataGrid.RowStyle>
										<Style TargetType="DataGridRow">
											<Style.Triggers>
												<DataTrigger Binding="{Binding PXE-Boot}" Value="PXE_INSTALL">
													<Setter Property="Background" Value="Plum"></Setter>
												</DataTrigger>
												<DataTrigger Binding="{Binding PXE-Boot}" Value="PXE_SKIP">
													<Setter Property="Background" Value="LightGreen"></Setter>
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</DataGrid.RowStyle>
									<DataGrid.CellStyle>
										<Style TargetType="DataGridCell">
											<Style.Triggers>
												<Trigger Property="IsSelected" Value="True">
													<Setter Property="Background" Value="LightBlue"/>
												</Trigger>
											</Style.Triggers>
										</Style>
									</DataGrid.CellStyle>
									<DataGrid.Columns>
										<DataGridTextColumn Header="Ping" Binding="{Binding Ping}" IsReadOnly="True">
											<DataGridTextColumn.CellStyle>
												<Style TargetType="DataGridCell">
													<Style.Triggers>
														<DataTrigger Binding="{Binding Ping}" Value="True">
															<Setter Property="Background" Value="green"/>
														</DataTrigger>
													</Style.Triggers>
												</Style>
											</DataGridTextColumn.CellStyle>
										</DataGridTextColumn>
										<DataGridTextColumn Header="DB: Hostname" Binding="{Binding Hostname}" IsReadOnly="True"/>
										<DataGridTextColumn Header="DB: Mac" Binding="{Binding ClientID}" IsReadOnly="True"/>
										<DataGridTextColumn Header="DB: Inv.-No." Binding="{Binding Assettag}" IsReadOnly="True"/>
										<DataGridTextColumn Header="DB: Tasksequence" Binding="{Binding TasksequenceID}" IsReadOnly="True"/>
										<DataGridTextColumn Header="DB: Drivergroup" Binding="{Binding Drivergroup}" IsReadOnly="True"/>
										<DataGridTextColumn Header="WDS: PXE-Boot" Binding="{Binding PXE-Boot}" IsReadOnly="True"/>
										<DataGridTextColumn Header="WDS: Bootimage" Binding="{Binding Bootimage}" IsReadOnly="True"/>
										<DataGridTextColumn Header="Log: Image" Binding="{Binding Wim_File}" IsReadOnly="True"/>
										<DataGridTextColumn Header="Log: last TS" Binding="{Binding Tasksequence_log}" IsReadOnly="True"/>
										<DataGridTextColumn Header="Log: Mainboard" Binding="{Binding Product}" IsReadOnly="True"/>
										<DataGridTextColumn Header="Log: Make" Binding="{Binding Make}" IsReadOnly="True"/>
										<DataGridTextColumn Header="Log: Model" Binding="{Binding Model}" IsReadOnly="True"/>
										<DataGridTextColumn Header="Log: Laptop" Binding="{Binding Laptop}" IsReadOnly="True"/>
										<DataGridTextColumn Header="Log: Installdate" Binding="{Binding Installdate}" IsReadOnly="True"/>
									</DataGrid.Columns>
								</DataGrid>
							</Grid>
						</Border>
					</Grid>
