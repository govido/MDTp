				<TabItem Header="Deploy-Monitoring" Padding="0,0,20,0" Controls:ControlsHelper.HeaderFontSize="20" Controls:ControlsHelper.HeaderFontWeight="Bold">
					<Grid Background="LightBlue">
						<StackPanel Name="monitoring_buttons" Orientation="Horizontal" HorizontalAlignment="Center">
							<Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,5,5" Name="refresh_monitoring_button" ToolTip="refresh monitoring">
								<StackPanel Orientation="Horizontal">
									<iconPacks:PackIconMaterial Kind="refresh"/>
									<TextBlock Margin="5,0">Refresh Database</TextBlock>
								</StackPanel>
							</Button>
							<Button IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,5,5" Name="DART_button" ToolTip="DART remoteviewer for Windows PE start">
								<StackPanel Orientation="Horizontal">
									<iconPacks:PackIconMaterial Kind="monitormultiple"/>
									<TextBlock Margin="5,0">DART RV start</TextBlock>
								</StackPanel>
							</Button>
							<Button IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,5,5" Name="RDP_button" ToolTip="start RDP-Session after install is completed">
								<StackPanel Orientation="Horizontal">
									<iconPacks:PackIconMaterial Kind="monitor"/>
									<TextBlock Margin="5,0">RDP start</TextBlock>
								</StackPanel>
							</Button>
						</StackPanel>
						<DataGrid HorizontalAlignment="Center" Height="auto" Width="auto" VerticalAlignment="Top" Margin="5,40,5,5" Name="monitoring_grid" IsReadOnly="True">
							<DataGrid.RowStyle>
								<Style TargetType="DataGridRow">
									<Style.Triggers>
										<DataTrigger Binding="{Binding Deploymentstatus}" Value="Installing...">
											<Setter Property="Background" Value="plum"></Setter>
										</DataTrigger>
										<DataTrigger Binding="{Binding Deploymentstatus}" Value="Failed!">
											<Setter Property="Background" Value="lightcoral"></Setter>
										</DataTrigger>
										<DataTrigger Binding="{Binding Deploymentstatus}" Value="Unresponsive">
											<Setter Property="Background" Value="lightyellow"></Setter>
										</DataTrigger>
										<DataTrigger Binding="{Binding Deploymentstatus}" Value="Install finished">
											<Setter Property="Background" Value="lightgreen"></Setter>
										</DataTrigger>
									</Style.Triggers>
								</Style>
							</DataGrid.RowStyle>
							<DataGrid.CellStyle>
								<Style TargetType="DataGridCell">
									<Style.Triggers>
										<Trigger Property="IsSelected" Value="True">
											<Setter Property="Background" Value="SkyBlue"/>
										</Trigger>
									</Style.Triggers>
								</Style>
							</DataGrid.CellStyle>
							<DataGrid.Columns>
								<DataGridTextColumn Header="ID" Binding="{Binding ID}" IsReadOnly="True"/>
								<DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="True"/>
								<DataGridTextColumn Header="Progress %" Binding="{Binding PercentComplete}" IsReadOnly="True"/>
								<DataGridTextColumn Header="last step" Binding="{Binding Stepname}" IsReadOnly="True"/>
								<DataGridTextColumn Header="Starttime" Binding="{Binding StartTime}" IsReadOnly="True"/>
								<DataGridTextColumn Header="Finishtime" Binding="{Binding EndTime}" IsReadOnly="True"/>
								<DataGridTextColumn Header="Status" Binding="{Binding Deploymentstatus}" IsReadOnly="True"/>
								<DataGridTextColumn Header="Step No." Binding="{Binding CurrentStep}" IsReadOnly="True"/>
								<DataGridTextColumn Header="Steps total" Binding="{Binding TotalSteps}" IsReadOnly="True"/>
							</DataGrid.Columns>
						</DataGrid>
					</Grid>
				</TabItem>

				<TabItem Header="Options,Logs" Padding="0,0,20,0" Controls:ControlsHelper.HeaderFontSize="20" Controls:ControlsHelper.HeaderFontWeight="Bold">
					<Grid Background="LightYellow">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="1*" />
							<ColumnDefinition Width="1*" />
							<ColumnDefinition Width="1*" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="1*" />
							<RowDefinition Height="1*" />
							<RowDefinition Height="1*" />
						</Grid.RowDefinitions>
						<StackPanel Name="Tab2_1" Grid.Row="0" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Stretch">
							<Button DockPanel.Dock="Top" HorizontalAlignment="Stretch" Width="auto" Margin="5,5,5,5" Name="import_old_wim_button" ToolTip="Import exisiting WIM-Images from old installation or other sources">
