								<StackPanel Orientation="Horizontal">
									<iconPacks:PackIconModern Kind="liststar"/>
									<TextBlock Margin="5,0">Create report from all PCs</TextBlock>
								</StackPanel>
							</Button>
							<Button Margin="5,5,5,5" Name="open_report_button" Width="auto" ToolTip="Open PC-Report with CSV-Buddy to view or edit">
								<StackPanel Orientation="Horizontal">
									<iconPacks:PackIconModern Kind="booklist"/>
									<TextBlock Margin="5,0">Open PC-report</TextBlock>
								</StackPanel>
							</Button>
						</StackPanel>
						<StackPanel Name="Tab2_2" Grid.Row="0" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Stretch">
							<Label HorizontalAlignment="Center" VerticalAlignment="Top" Content="Logs and Folders:" FontWeight="Bold" FontSize="14" Margin="0,0,0,0"/>
							<Button HorizontalAlignment="Stretch" Margin="5,5,5,5" Name="import_folder" Width="auto" ToolTip="Open import-folder, containing CSV-files, PC-logs and more">
								<StackPanel Orientation="Horizontal">
									<iconPacks:PackIconModern Kind="folderpuzzle"/>
									<TextBlock Margin="5,0">MDTp-Import folder</TextBlock>
								</StackPanel>
							</Button>
							<Button Controls:ControlsHelper.ContentCharacterCasing="Normal" HorizontalAlignment="Stretch" Margin="5,5,5,5" Name="import_logs_button" Width="auto" ToolTip="Open import/delete-log folder" BorderBrush="Black">
								<StackPanel Orientation="Horizontal">
									<iconPacks:PackIconMaterial Kind="import"/>
									<TextBlock Margin="5,0">Open import / delete logs</TextBlock>
								</StackPanel>
							</Button>
							<Button DockPanel.Dock="Top" HorizontalAlignment="Stretch" Width="auto" Margin="5,5,5,5" Name="driver_import_button" ToolTip="Import driver folders">
								<StackPanel Orientation="Horizontal">
									<iconPacks:PackIconModern Kind="usbdrive"/>
									<TextBlock Margin="5,0">Import driver folder</TextBlock>
								</StackPanel>
							</Button>
							<Button HorizontalAlignment="Stretch" Margin="5,5,5,5" Name="csv_edit_button" Width="auto" ToolTip="Edit and save CSV-files with CSV-Buddy">
								<StackPanel Orientation="Horizontal">
									<iconPacks:PackIconModern Kind="listhidden"/>
									<TextBlock Margin="5,0">CSV edit tool</TextBlock>
								</StackPanel>
							</Button>
						</StackPanel>
						<StackPanel Name="Tab2_3" Grid.Row="0" Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Stretch">
							<Label HorizontalAlignment="Center" VerticalAlignment="Top" Content="Delete permanently:" FontWeight="Bold" FontSize="14" Margin="0,0,0,0"/>
							<Button HorizontalAlignment="Stretch" Content="MDTp tasksequence delete" Margin="5,5,5,5" Name="MDTp_TS_delete_button" Width="auto" ToolTip="Delete tasksequences, os images or drives permenatly. Attention!!!!!" BorderBrush="#d0021b" Foreground="#d0021b"/>
							<Button HorizontalAlignment="Stretch" Content="MDTp OS Image delete" Margin="5,5,5,5" Name="MDTp_OS_delete_button" Width="auto" ToolTip="Delete tasksequences, os images or drives permenatly. Attention!!!!!" BorderBrush="#d0021b" Foreground="#d0021b"/>
							<Button HorizontalAlignment="Stretch" Content="MDTp driver folder delete" Margin="5,5,5,5" Name="MDTp_drivergroup_delete_button" Width="auto" ToolTip="Delete tasksequences, os images or drives permenatly. Attention!!!!!" BorderBrush="#d0021b" Foreground="#d0021b"/>
							<Button HorizontalAlignment="Stretch" Content="MDTp templates delete" Margin="5,5,5,5" Name="MDTp_template_delete_button" Width="auto" ToolTip="Delete tasksequences, os images or drives permenatly. Attention!!!!!" BorderBrush="#d0021b" Foreground="#d0021b"/>
						</StackPanel>
					</Grid>
				</TabItem>
			</TabControl>
			<dialogs:DialogContainer Background="Red" Name="Warning"/>

		</Grid>

	</Grid>


