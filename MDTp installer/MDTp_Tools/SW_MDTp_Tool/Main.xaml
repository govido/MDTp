									<StackPanel Orientation="Horizontal">
										<iconPacks:PackIconMaterial Kind="refresh"/>
										<TextBlock Margin="5,0">Refresh pending installs</TextBlock>
									</StackPanel>
								</Button>
								<Button DockPanel.Dock="Top" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Width="auto" Margin="5,5,5,5" Name="staggered_deploy_start_button" ToolTip="Start install for selected PCs (use ctrl or shift for selection)">
									<StackPanel Orientation="Horizontal">
										<iconPacks:PackIconMaterial Kind="harddisk"/>
										<TextBlock Margin="5,0">Start install</TextBlock>
									</StackPanel>
								</Button>
								<ListBox DockPanel.Dock="Top" SelectionMode="Extended" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,5,5,5" ScrollViewer.CanContentScroll="True" Name="staggered_listbox"/>
