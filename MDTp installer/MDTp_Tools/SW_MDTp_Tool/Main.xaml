								</StackPanel>
								<StackPanel Name="wds_inactive" Orientation="horizontal" HorizontalAlignment="Center">
									<Label HorizontalAlignment="Center" VerticalAlignment="Top" Content="Inactive bootimages:" Margin="0,0,0,0"/>
									<TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="WDS_Status_inactive" Margin="5,5,5,5" Name="WDS_Status_inactive"/>
