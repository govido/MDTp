									<iconPacks:PackIconModern Kind="cd"/>
									<TextBlock Margin="5,0">Import exisiting WIM-files</TextBlock>
									<iconPacks:PackIconModern Kind="cd"/>
								</StackPanel>
							</Button>
							<Button DockPanel.Dock="Top" HorizontalAlignment="Stretch" Width="auto" Margin="5,5,5,5" Name="CustomSettings_button" ToolTip="Edit CustomSettings.ini to set default TS or turn on/off MAC or Serialnumber SQL detection">
