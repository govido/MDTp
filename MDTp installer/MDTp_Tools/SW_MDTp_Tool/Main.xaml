										<iconPacks:PackIconMaterial Kind="information"/>
										<TextBlock Margin="5,0">TS Info / OS image change</TextBlock>
										<iconPacks:PackIconModern Kind="swap"/>
										<iconPacks:PackIconModern Kind="cd"/>
									</StackPanel>
								</Button>
								<StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
									<Label HorizontalAlignment="Center" VerticalAlignment="Top" Content="Info Tasksequence:" FontWeight="Bold" Margin="0,0,0,0"/>
