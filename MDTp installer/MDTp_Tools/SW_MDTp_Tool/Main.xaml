								<Button DockPanel.Dock="Top" HorizontalAlignment="Stretch" Width="auto" Margin="5,5,5,5" Name="deployment_update_button" ToolTip="Recreate bootimages after driverimport. Lite and Zerotouch will be automatically added to WDS.">
									<StackPanel Orientation="Horizontal">
										<iconPacks:PackIconModern Kind="cd"/>
										<TextBlock Margin="5,0">MDT Lite/Zerotouch Update, WDS import</TextBlock>
										<iconPacks:PackIconMaterial Kind="arrowup"/>
									</StackPanel>
								</Button>

								<StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center">
									<CheckBox Content="Completely regenerate bootimages" Margin="5,5,5,5" Name="image_recreate_checkbox" ToolTip="Delete and recreate the bootimages from scratch instead of update (slow!)"/>
