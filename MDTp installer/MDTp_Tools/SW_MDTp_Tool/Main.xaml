											<iconPacks:PackIconMaterial Kind="lockopenoutline"/>
											<TextBlock Margin="5,0">activate Zerotouch</TextBlock>
										</StackPanel>
									</Button>
									<Button Margin="5,5,5,5" Name="litetouch_on_button" Width="auto" ToolTip="deactivate all other bootimages, activate Litetouch">
										<StackPanel Orientation="Horizontal">
											<iconPacks:PackIconMaterial Kind="lock"/>
											<TextBlock Margin="5,0">activate Litetouch</TextBlock>
										</StackPanel>
									</Button>
								</StackPanel>
								<StackPanel Name="wds_active" Orientation="horizontal" HorizontalAlignment="Center">
									<Label HorizontalAlignment="Center" VerticalAlignment="Top" Content="Active bootimages:" Margin="0,0,0,0"/>
